<head>
  <style>
    body {
      background-color: #E7E9EB;
      display: grid;
      place-items: center;

      #myDIV {
        width: 80vw;
        height: 300vh;
        display: grid;
        grid-template-columns: auto auto auto auto;
        gap: 10px;
        background-color: #2196F3;
        padding: 10px;
      }

      #myDIV div {
        background-color: rgba(255, 255, 255, 0.8);
        text-align: center;
        justify-items: center;
        padding: 20px;
        font-size: 30px;
      }

      .course-container {
        display: grid;
        justify-items: center;
        border: 2px solid black;
      }



      .courselist {
        grid-area: 2 / 1 / span 3 / span 1;

      }

      .studentlist {
        grid-area: 2 / 2 / span 1 / span 3;
      }

      .studentinfo {
        grid-area: 3 / 2 / span 2 / span 3;
      }

      .btn {
        background-color: rgb(255, 255, 255);
        color: black;
        border: 2px solid #008CBA;
      }

      .btn:hover {
        background-color: #4a33f6;
        color: white;
        transform: scale(1.5)
      }

    }
  </style>
</head>

<body>
  <div id="myDIV">

    <div class="courselist">
      <h3>Current Courses</h3>
      <div class="text-center course-container">
        {{#each courses}}
        <p>
          <button class="btn btn-secondary"><a href="/course/{{this.id}}">{{this.course_name}}</a></button>
        </p>
        {{/each}}
      </div>
    </div>

    <div class="studentlist"> {{#if students.length}}
      <h3>Registered Students</h3>
      <div class="studentSection">
        {{#each students}}
        {{!-- use id value of user to target specific student --}}
        <p>
          <button class="btn btn-secondary"><a href="/studentInfo/{{this.id}}">
              {{this.first_name}}{{this.last_name}}</a></button>
        </p>
        {{/each}}
      </div>
    </div>

    {{!-- render student information for the id selected in student dropdown... might need to use a helper --}}
    <div class="studentinfo">
      <h3>Student Information</h3>
      {{#each students}}
      <div>Student name: <strong> {{this.first_name}} {{this.last_name}} </strong></div>
      <div> ID Number: <strong>{{this.id}} </strong></div>
      <div>Currently enrolled in course with id: <strong>{{grade.course_id}}</strong></div>
      <div>This course belongs to this department: <strong>{{grade.course.department.department_name}}</strong></div>
      <div>Grade value: <strong>{{grade.value}}</strong></div>
      <div>Final grade value: <strong>{{grade.course.course_name}}</strong></div>
      <br>
      <p>------------------- Line Here ------------------- </p>
      {{/each}}
    </div>
    {{/if}}

    {{#if grades.length}}

    <div class=" project-list">
      <h3>Student current Grades:</h3>
      {{#each grades as |grade| }}

      <p>Grade id: <strong>{{grade.id}}</strong></p>
      <p>Student id: <strong>{{grade.student_id}}</strong></p>
      <p>course id: <strong>{{grade.course_id}}</strong></p>
      <p>Grade value: <strong>{{grade.value}}</strong></p>
      <p>This grade belongs to student: <strong>{{grade.student.first_name}} {{grade.student.last_name}}</strong></p>
      <p>The student got this grade in this course: <strong>{{grade.course.course_name}}</strong></p>
      <p>The course's description is as follows: <strong>{{grade.course.description}}</strong></p>

      <p>This course belongs to this department: <strong>{{grade.course.department.department_name}}</strong></p>

      {{#if courses.length}}
      {{#each courses as |course| }}

      <p>The course belongs to this department: <strong>{{course.id}}</strong></p>

      {{/each}}
    </div>
    {{/if}}

    <p>------------------- Line Here ------------------- </p>

    {{/each}}

    {{/if}}

  </div>

  <br> <br>

  </div>
</body>